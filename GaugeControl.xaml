<UserControl
    x:Class="SystemMonitor.GaugeControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="140"
    Height="120">
    <Grid>
        <!--  Background Arc (Dark Grey)  -->
        <Path
            Stroke="#333333"
            StrokeEndLineCap="Round"
            StrokeStartLineCap="Round"
            StrokeThickness="12">
            <Path.Data>
                <PathGeometry>
                <PathFigure StartPoint="70,30">
                    <ArcSegment
                        IsLargeArc="True"
                        Point="70,130"
                        RotationAngle="0"
                        Size="50,50"
                        SweepDirection="Clockwise" />
                </PathFigure>
            </PathGeometry>
        </Path.Data>
    </Path>

    <!--  Active Value Arc (Colored with Gradient)  -->
    <Path
        x:Name="ActivePath"
        StrokeEndLineCap="Round"
        StrokeStartLineCap="Round"
        StrokeThickness="12">
        <Path.Stroke>
            <LinearGradientBrush x:Name="GaugeGradient" StartPoint="0,1" EndPoint="0,0">
                <GradientStop x:Name="GradientStart" Offset="0" Color="#00FF88"/>
                <GradientStop x:Name="GradientEnd" Offset="1" Color="#00FF88"/>
            </LinearGradientBrush>
        </Path.Stroke>
        <Path.Data>
            <PathGeometry>
                <PathFigure StartPoint="70,130">
                    <!--  EndPoint calculated in code  -->
                    <ArcSegment
                        x:Name="ActiveSegment"
                        IsLargeArc="False"
                        Point="70,130"
                        Size="50,50"
                        SweepDirection="CounterClockwise" />
                </PathFigure>
            </PathGeometry>
        </Path.Data>
    </Path>

    <!--  Text Labels  -->
    <StackPanel
            Margin="0,0,0,15"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom">
            <TextBlock
                x:Name="ValueText"
                HorizontalAlignment="Center"
                FontSize="22"
                FontWeight="Bold"
                Foreground="White"
                Text="0%" />
            <TextBlock
                x:Name="LabelText"
                HorizontalAlignment="Center"
                FontSize="14"
                FontWeight="SemiBold"
                Foreground="#AAAAAA"
                Text="LABEL" />
        </StackPanel>
    </Grid>
</UserControl>

