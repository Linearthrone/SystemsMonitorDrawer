<UserControl
    x:Class="SystemMonitor.FanGaugeControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="140"
    Height="120"
    Background="Transparent">
    <Grid IsHitTestVisible="False">
        <Canvas x:Name="GaugeCanvas" Width="140" Height="120" />
        <TextBlock
            x:Name="RpmText"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Margin="0,6,0,0"
            FontSize="14"
            FontWeight="Bold"
            Foreground="#EEEEEE"
            Text="0 RPM" />
    </Grid>
</UserControl>
