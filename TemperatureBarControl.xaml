<UserControl
    x:Class="SystemMonitor.TemperatureBarControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="40"
    Height="120"
    Loaded="UserControl_Loaded">
    <Grid Margin="5">
        <!-- Thermometer Background -->
        <Border
            x:Name="ThermometerBackground"
            Width="16"
            Height="110"
            Background="#333333"
            CornerRadius="8"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <!-- Temperature Fill -->
            <Grid>
                <Border
                    x:Name="TemperatureFill"
                    Width="16"
                    Height="0"
                    VerticalAlignment="Bottom"
                    CornerRadius="8"
                    ClipToBounds="True">
                    <Border.Background>
                        <LinearGradientBrush x:Name="TempGradient" StartPoint="0,1" EndPoint="0,0">
                            <GradientStop x:Name="GradientStart" Offset="0" Color="#00FF88"/>
                            <GradientStop x:Name="GradientEnd" Offset="1" Color="#00FF88"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
            </Grid>
        </Border>

        <!-- Temperature Text -->
        <TextBlock
            x:Name="TemperatureText"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            FontSize="11"
            FontWeight="SemiBold"
            Foreground="#AAAAAA"
            Margin="0,5,0,0"
            Text="0Â°C"/>
    </Grid>
</UserControl>
